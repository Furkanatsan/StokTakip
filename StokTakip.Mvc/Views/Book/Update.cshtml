@model StokTakip.Mvc.Models.BookUpdateViewModel


@{
    ViewBag.Title = "Kitap Güncelle";
}
<div class="card mt-3">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Kitaplar
    </div>
    <div class="card-body">
        <form class="form-group" method="post">
            <div class="form-group">
                <input type="hidden" class="form-control" asp-for="ID" /><span class="text-danger" asp-validation-for="ID"></span>
                <label asp-for="Name"></label>
                <input type="text" class="form-control" asp-for="Name" /><span class="text-danger" asp-validation-for="Name"></span>
                <label asp-for="Stock"></label>
                <input type="number" class="form-control" asp-for="Stock" /><span class="text-danger" asp-validation-for="Stock"></span>
                <label asp-for="CategoryId"></label>
                <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"ID","Name"))">
                    <option></option>

                </select><span class="text-danger" asp-validation-for="CategoryId"></span>
                <label asp-for="AuthorId"></label>
                <select class="form-control" asp-for="AuthorId" asp-items="@(new SelectList(Model.Authors,"ID","FullName"))">
                    <option></option>

                </select><span class="text-danger" asp-validation-for="AuthorId"></span>
            </div>
            <a class="btn btn-danger" asp-controller="book" asp-action="Index"><span class="fas fa-times"></span> İptal</a>
            <button class="btn btn-primary"><span class="fas fa-save"></span> Kaydet</button>
        </form>
    </div>
</div>
