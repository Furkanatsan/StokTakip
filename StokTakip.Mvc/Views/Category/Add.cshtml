@model StokTakip.Bll.Dtos.CategoryAddDto
@{ 
    ViewBag.Title = "Kategori Ekle";
}
<div class="card mt-3">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Kitaplar
    </div>
    <div class="card-body">
        <form class="form-group" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" class="form-control" asp-for="Name" /><span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <a class="btn btn-danger" asp-controller="category" asp-action="Index"><span class="fas fa-times"></span> İptal</a>
            <button class="btn btn-primary"><span class="fas fa-save"></span> Kaydet</button>
        </form>
    </div>
</div>