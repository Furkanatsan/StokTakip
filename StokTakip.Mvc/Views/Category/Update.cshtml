@model StokTakip.Bll.Dtos.CategoryUpdateDto


<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title"><span class="fas fa-edit"></span> Kategori Düzenleniyor</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="iptal">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form asp-action="Update" id="form-category-update" method="post">
                <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" /> @*modelin validasyonu doğru mu değil mi kontrol için*@
                <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;">
                </div>
                <div class="form-group">
                    <input type="hidden" class="form-control" asp-for="ID" /><span class="text-danger" asp-validation-for="ID"></span>
                    <label asp-for="Name"></label>
                    <input type="text" class="form-control" asp-for="Name" /><span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger btn-block" data-dismiss="modal"><span class="fas fa-times"></span> İptal</button>
            <button type="button" class="btn btn-primary btn-block" id="btnUpdate"><span class="fas fa-save"></span> Kaydet</button>
        </div>
    </div>
</div>
</div>